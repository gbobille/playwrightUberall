{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "module": "commonjs",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}